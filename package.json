      "types": "./dist/core/useWebsiteLinksExtractor.d.ts"
    },
    "./useWebsiteMetaExtractor": {
      "import": "./dist/core/useWebsiteMetaExtractor.js",
      "require": "./dist/core/useWebsiteMetaExtractor.cjs",
