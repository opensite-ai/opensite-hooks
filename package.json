      "require": "./dist/core/websiteExtractorTypes.cjs",
      "types": "./dist/core/websiteExtractorTypes.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm run build:lib && pnpm run build:umd",
    "build:lib": "tsc && node scripts/emit-cjs.js",
    "build:umd": "vite build --config vite.umd.config.ts",
    "build:watch": "tsc -w",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "bundle-analysis": "node scripts/analyze-bundle.js || true",
    "prepare": "husky",
    "prepack": "pnpm run build",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20.17.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "happy-dom": "^15.11.7",
    "husky": "^9.1.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
